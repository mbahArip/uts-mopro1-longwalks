<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/longwalk__bg"
    tools:context=".loginActivity">

    <TextView
        android:id="@+id/login__header"
        android:layout_width="400dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="622dp"
        android:fontFamily="@font/bold"
        android:text="Hey there, human"
        android:textColor="@color/longwalk__text"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/login__detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="608dp"
        android:fontFamily="@font/regular"
        android:text="What do you go by?"
        android:textColor="@color/longwalk__text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login__inputFirstName"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="531dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/longwalk__text"
        android:textColorHint="@color/longwalk__btnOff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/login__inputLastName"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="466dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/longwalk__text"
        android:textColorHint="@color/longwalk__btnOff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/login__btnNext"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="368dp"
        android:background="@drawable/button_rounded"
        android:enabled="false"
        android:fontFamily="@font/bold"
        android:text="NEXT"
        android:textColor="@color/longwalk__bg"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login__image"
        android:layout_width="102dp"
        android:layout_height="105dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="608dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_longwalks_loginplant" />
</android.support.constraint.ConstraintLayout>